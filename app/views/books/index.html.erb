<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', "/books/:id", method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
 <div class="new_book" >

   <%= form_with model:@book, local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <span class="book_title"><%= f.text_field :title %></span>
    </div>

    <div class="field">
      <label for="book_body">Body</label>
      <span class="book_body"><%= f.text_area :body %></span>
    </div>

    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

</div>

